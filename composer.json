{
    "name": "innmind/event-bus",
    "type": "library",
    "description": "Event dispatcher library",
    "keywords": ["event", "dispatcher"],
    "homepage": "http://github.com/Innmind/EventBus",
    "license": "MIT",
    "authors": [
        {
            "name": "Baptiste Langlade",
            "email": "langlade.baptiste@gmail.com"
        }
    ],
    "support": {
        "issues": "http://github.com/Innmind/EventBus/issues"
    },
    "require": {
        "php": "~7.4",
        "innmind/immutable": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Innmind\\EventBus\\": "src/"
        },
        "files": ["src/bootstrap.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Fixtures\\Innmind\\EventBus\\": "fixtures/",
            "Tests\\Innmind\\EventBus\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "vimeo/psalm": "~4.1"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    }
}
